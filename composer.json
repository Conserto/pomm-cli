{
    "name": "pomm-project/cli",
    "type": "library",
    "description":  "Command line for Pomm.",
    "keywords": ["cli", "postgresql", "database", "pomm"],
    "homepage": "http://www.pomm-project.org",
    "license":  "MIT",
    "authors":  [ { "name": "GrÃ©goire HUBERT", "email": "hubert.greg@gmail.com", "homepage": "http://www.pomm-project.org" } ],
    "require": {
        "php": ">=5.4.4",
        "ext-pgsql": "*",
        "psr/log": "~1.0",
        "pomm-project/foundation":    "2.0.*@dev",
        "pomm-project/model-manager": "2.0.*@dev",
        "symfony/console":            "2.5.*"
    },
    "require-dev": {
        "atoum/atoum" : "dev-master"
    },
    "autoload": {
        "psr-4": { 
            "PommProject\\Cli\\": "sources/lib"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "PommProject\\Cli\\Test\\": "sources/tests"
        }
    },
    "bin": ["bin/pomm.php"],
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
